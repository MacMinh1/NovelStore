@model Order
<p>Vui lòng nhập chi tiết thông tin của bạn.</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Checkout" method="post">
    <h3>Người Nhận</h3>
    <div class="form-group">
        <label>Họ Và Tên</label><input asp-for="Name" class="form-control" />
    </div>
    <h3>Thông Tin</h3>
    <div class="form-group">
        <label>Địa Chỉ</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Thành Phố</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tên Tỉnh</label><input asp-for="TenTinh" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone</label><input asp-for="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ghi Chú</label><input asp-for="Note" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Order" />
    </div>
</form>
